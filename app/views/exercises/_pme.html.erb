<div class="container h-100 d-flex justify-content-center mt-5">
  <div class="my-auto">
    <h2>Use this interface to assess what you are feeling right now</h2>
    <br>
    <br>
    <%= form_for :exercise, url: {action: "create"} do |f| %>
      <% if current_user.id.odd? %>
        <b><%= f.label :suggested_emotion, "Write a word or two that best describe what you are feeling" %></b>
        <br>
        <%= f.text_field :suggested_emotion %>
      <% end %>
         <br>
      <br>
         <br>

      <b>Use the sliders to rate your feeling</b>
      <br>
      <br>
      <div class="mt-3">
        <%= image_tag "energyempty.png", class: "style_image_arousal" %>
        <%= f.range_field :arousal, :min=>0, :max=>100, :class=>"slide", :id=>"slider1"%>
        <%= image_tag "energyfull.png", class: "style_image_arousal" %>
      </div>
      <br>
      <div class="mt-3">
        <%= image_tag "sad.png", class: "style_image_valence" %>
        <%= f.range_field :valence, :min=>0, :max=>100, :class=>"slide", :id=>"slider1"%>
        <%= image_tag "happy.png", class: "style_image_valence"%>
      </div>
      <br>
      <br>
      <%= f.hidden_field(:exercise_type) %>
      <%= f.hidden_field(:video_id) %>

    <div class="form-group">
      <%= f.submit "Next" %>
    </div>
    <% end %>
  </div>
</div>