<div class="container h-100 d-flex justify-content-center mt-5">
  <div class="my-auto">
    <h2>Assessment</h2>
    <%= form_for :exercise, url: {action: "create"} do |f| %>
      <% if current_user.id.odd? %>
        <%= f.label :suggested_emotion, "Write a word or a setence about what you are feeling" %>
        <br>
        <%= f.text_field :suggested_emotion %>
      <% end %>
      <br>
      <div class="mt-3">
        <%= image_tag "energyempty.png", class: "style_image_arousal" %>
        <%= f.range_field :arousal, :min=>0, :max=>200, :class=>"slide", :id=>"slider1"%>
        <%= image_tag "energyfull.png", class: "style_image_arousal" %>
      </div>
      <br>
      <div class="mt-3">
        <%= image_tag "sad.png", class: "style_image_valence" %>
        <%= f.range_field :valence, :min=>0, :max=>200, :class=>"slide", :id=>"slider1"%>
        <%= image_tag "happy.png", class: "style_image_valence"%>
      </div>
      <br>
      <%= f.hidden_field(:exercise_type) %>
      <%= f.hidden_field(:video_id) %>

      <%= f.submit "Submit" %>
    <% end %>
  </div>
</div>